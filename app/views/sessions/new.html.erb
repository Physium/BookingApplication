<%= form_tag '/login', :class => "form-signin" do %>
   <img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
   <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>

   <%= label_tag 'inputUsername', 'Username', class: "sr-only" %>
   <%= text_field_tag :username, nil, class: "form-control", placeholder: "Email Address", required: true, autofocus: true%>
   <%= label_tag 'inputPassword', 'Password', class: "sr-only" %>
   <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password", required: true %>
   <div class="checkbox mb-3">
   </div>
   <%= submit_tag "Sign In", class: "btn btn-lg btn-primary btn-block" %>
   <p class="mt-5 mb-3 text-muted">&copy; 2017-2020</p>
<%end%>