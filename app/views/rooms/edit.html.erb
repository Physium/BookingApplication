<h1>Editing Room</h1>

<%= bootstrap_form_with(model: @room, local: true) do |form| %>
    <% if @room.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>
  
        <ul>
          <% @room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="bg-light rounded p-4 mb-4">
      <div class="row">
        <div class="col">
          <%= form.text_field :name, label: "Room Name" %>
        </div>
        <div class="col">
          <%= form.number_field :capacity %>
        </div>
      </div>
    
      <%= form.submit 'Save', class: "btn btn-primary mb-4 mt-2"%>
    </div>
  <% end %>

<%= link_to 'Show', @room %> |
<%= link_to 'Back', rooms_path %>
